@page
@model PasswordKeeper.Web.Pages.AddCredentialModel
@{
}


<H3> Adding Credentials </H3>
<br>

<div class="border container" style="padding:initial">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Cred.Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="Cred.Description" class="form-control" />
            </div>
            <span asp-validation-for="Cred.Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Cred.UserName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Cred.UserName" class="form-control" />
            </div>
            <span asp-validation-for="Cred.UserName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Cred.Pwd"></label>
            </div>
            <div class="col-6">
                <input type="password" asp-for="Cred.Pwd" class="form-control" />
            </div>
            <span asp-validation-for="Cred.Pwd" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Add" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back </a>
            </div>
        </div>
    </form>

</div>
